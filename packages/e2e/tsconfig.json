{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "checkJs": true,
    "module": "esnext",
    "types": [],
    "moduleResolution": "nodenext",
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src", "test", "typings/types.d.ts"]
}
