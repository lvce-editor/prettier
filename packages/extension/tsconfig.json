{
  "compilerOptions": {
    "lib": ["esnext"],
    "checkJs": true,
    "module": "esnext",
    "target": "esnext",
    "types": ["vscode-types", "node", "jest"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true
  },
  "include": ["src", "test", "data"]
}
