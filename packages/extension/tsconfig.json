{
  "compilerOptions": {
    "lib": ["esnext", "WebWorker"],
    "checkJs": true,
    "target": "esnext",
    "types": ["jest"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src"]
}
