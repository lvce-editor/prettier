{
  "compilerOptions": {
    "lib": ["esnext", "WebWorker"],
    "checkJs": true,
    "module": "esnext",
    "target": "esnext",
    "types": [],
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src", "test"],
  "exclude": ["third_party"]
}
